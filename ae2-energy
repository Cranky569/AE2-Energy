local mon = peripheral.find("monitor")
local flux = peripheral.find("flux_accessor") -- Flux Accessor / Controller

if not mon then error("Kein Monitor gefunden!") end
if not flux then error("Kein Flux Accessor gefunden!") end

-- Funktion zum Formatieren groÃŸer Zahlen mit K, M, G, T
local function formatBytes(bytes)
    if bytes >= 1e12 then
        return string.format("%.2fT", bytes / 1e12)
    elseif bytes >= 1e9 then
        return string.format("%.2fG", bytes / 1e9)
    elseif bytes >= 1e6 then
        return string.format("%.2fM", bytes / 1e6)
    elseif bytes >= 1e3 then
        return string.format("%.2fK", bytes / 1e3)
    else
        return tostring(bytes)
    end
end

-- Monitor vorbereiten
mon.clear()
mon.setTextScale(1)
mon.setBackgroundColor(colors.black)
mon.setTextColor(colors.white)

local function writeCentered(text, y, color)
    local w, _ = mon.getSize()
    local x = math.floor((w - #text) / 2) + 1
    mon.setCursorPos(x, y)
    if color then mon.setTextColor(color) end
    mon.write(text)
    mon.setTextColor(colors.white)
end

while true do
    mon.clear()
    local y = 1
    writeCentered("Flux Energy Monitor", y, colors.yellow)
    y = y + 2

    -- Energieverbrauch (Output)
    local okOut, output = pcall(flux.getTransfer) -- Output in FE/t
    if okOut then
        writeCentered("Energy Usage: " .. formatBytes(output) .. " FE/t", y, colors.red)
        y = y + 1
    else
        writeCentered("Energy Usage: Error", y, colors.red)
        y = y + 1
    end

    -- Gespeicherte Energie + % anzeigen
    local okStored, stored = pcall(flux.getEnergyStored)
    local okCap, capacity = pcall(flux.getMaxEnergyStored)
    if okStored and okCap and capacity > 0 then
        local percent = (stored / capacity) * 100
        writeCentered("Stored: " .. formatBytes(stored) .. " / " .. formatBytes(capacity), y, colors.green)
        y = y + 1
        writeCentered(string.format("(%.2f%%)", percent), y, colors.green)
        y = y + 1
    else
        writeCentered("Energy Stored: Error", y, colors.red)
        y = y + 1
    end

    sleep(2)
end
